<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.projet_java_2024.frontend.DisciplineController">
    <children>
        <GridPane prefHeight="120.0" prefWidth="900.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="0.0" prefWidth="80.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="709.7999877929688" minWidth="10.0" prefWidth="695.3999938964844" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="10.0" prefWidth="80.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label alignment="CENTER" prefHeight="53.0" prefWidth="700.0" text="Gestionnaire JO" GridPane.columnIndex="1">
                    <font>
                        <Font name="Candara" size="36.0" />
                    </font>
                </Label>
                <ImageView fitHeight="81.0" fitWidth="83.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@/logo_paris_JO.png" />
                    </image>
                </ImageView>
                <ImageView fitHeight="81.0" fitWidth="81.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="2" />
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </GridPane>
        <VBox layoutY="120.0" prefHeight="580.0" prefWidth="900.0">
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="200.0" spacing="50.0" style="-fx-background-color: #D6C278;">
                    <children>
                        <SplitMenuButton fx:id="athleteMenuButton" mnemonicParsing="false" onAction="#onAthleteMenuButtonClick" prefWidth="100.0" text="Athlète">
                            <items>
                                <MenuItem fx:id="addAthleteMenuItem" mnemonicParsing="false" onAction="#onAddAthleteMenuItemClick" text="Ajouter" />
                                <MenuItem fx:id="deleteAthleteMenuItem" mnemonicParsing="false" onAction="#onDeleteAthleteMenuItemClick" text="Supprimer" />
                                <MenuItem fx:id="updateAthleteMenuItem" mnemonicParsing="false" onAction="#onUpdateAthleteMenuItemClick" text="Modifier les informations" />
                            </items>
                            <font>
                                <Font name="Candara" size="12.0" />
                            </font>
                        </SplitMenuButton>
                        <SplitMenuButton fx:id="disciplineMenuButton" mnemonicParsing="false" onAction="#onDisciplineMenuButtonClick" prefWidth="100.0" text="Discipline">
                            <items>
                                <MenuItem fx:id="addDisciplineMenuItem" mnemonicParsing="false" onAction="#onAddDisciplineMenuItemClick" text="Ajouter" />
                                <MenuItem fx:id="deleteDisciplineMenuItem" mnemonicParsing="false" onAction="#onDeleteDisciplineMenuItemClick" text="Supprimer" />
                                <MenuItem fx:id="assignDisciplineMenuItem" mnemonicParsing="false" onAction="#onAssignDisciplineMenuItemClick" text="Attribuer à un athlète" />
                            </items>
                        </SplitMenuButton>
                        <SplitMenuButton fx:id="eventMenuButton" mnemonicParsing="false" onAction="#onEventMenuButtonClick" prefWidth="100.0" text="Evènement">
                            <items>
                                <MenuItem fx:id="addEventMenuItem" mnemonicParsing="false" onAction="#onAddEventMenuItemClick" text="Ajouter" />
                                <MenuItem fx:id="deleteEventMenuItem" mnemonicParsing="false" onAction="#onDeleteEventMenuItemClick" text="Supprimer" />
                                <MenuItem fx:id="assignEventMenuItem" mnemonicParsing="false" onAction="#onAssignEventMenuItemClick" text="Attribuer à un athlète" />
                            </items>
                        </SplitMenuButton>
                        <SplitMenuButton fx:id="resultatsMenuButton" mnemonicParsing="false" onAction="#onResultatsMenuButtonClick" prefWidth="100.0" text="Résultats">
                            <items>
                                <MenuItem fx:id="addResultatMenuItem" mnemonicParsing="false" onAction="#onAddResultatMenuItemClick" text="Ajouter" />
                                <MenuItem fx:id="deleteResultatMenuItem" mnemonicParsing="false" onAction="#onDeleteResultatMenuItemClick" text="Supprimer" />
                                <MenuItem fx:id="classementResultatMenuItem" mnemonicParsing="false" onAction="#onClassementResultatMenuItemClick" text="Classement" />
                            </items>
                        </SplitMenuButton>
                    </children>
                    <padding>
                        <Insets left="20.0" />
                    </padding>
                </HBox>
                <TableView fx:id="athleteTableView" prefHeight="532.0" prefWidth="900.0">
                    <columns>
                        <TableColumn fx:id="nomColumn" prefWidth="125.59996795654297" text="Nom" />
                        <TableColumn fx:id="sexeColumn" prefWidth="34.39996337890625" text="Sexe" />
                        <TableColumn fx:id="paysColumn" prefWidth="104.0" text="Pays" />
                        <TableColumn fx:id="ageColumn" prefWidth="40.800048828125" text="Age" />
                        <TableColumn fx:id="participationColumn" prefWidth="196.80001831054688" text="Nombre de participation" />
                    </columns>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                    <padding>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                    </padding>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>
